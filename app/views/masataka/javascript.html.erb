<h1>Masataka#javascript</h1>
<p id="text1" onclick="test()">ここはテストです。</p>

<!-- Vue.js （vueのインストールが必要）-->
<div id="app">
  {{ message }}
</div>


<!-- ボタンクリック後に赤色に変わる -->
<button id = "button1" onclick="effect()">ボタンを赤にするよ</button>


<!-- JavaScript -->
<script type="text/javascript">
	
function effect(){
	var button1 = document.getElementById("button1")
	button1.style.backgroundColor = "red"
}

function test(){
	var text1 = document.getElementById("text1")
	text1.style.backgroundColor = "blue"
}

</script>


 