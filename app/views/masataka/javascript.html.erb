// ボタン赤色に変化
function effect(){
	var button1 = document.getElementById("button1")
	button1.style.backgroundColor = "red"
};

// 文言クリックでHTML,CSS変化
function test(){
	var text1 = document.getElementById("text1")
	//text1.style.backgroundColor = "blue"
	text1.textContent = "ボタンを押したな！バレバレだぞ！"
	text1.style.fontSize = "50px"
};

// ボタンクリックで新たなボタンを出す
function button(){
	var button = document.getElementById("button-toggle")
	button.innerHTML = "&times;"
};


$('#news')
	.css({
		'top': '-100px'
	})
	.animate({
		'top': '40px'
	})
	.animate({
		'top': '30px'
	}, 500)
	.delay(3000)
	.fadeOut('show')
	.bind('click', function(){
		$(this).stop(true, false).fadeOut('show');
	});

//// クリックで開閉するアコーディオンメニュー
//高さ指定
$('.open-2').each(function(){
    $(this).css("height",$(this).height()+"px");
});
//開閉要素を隠す
$('.open-2').hide();
//ボタン要素が押されたら
$('.btn-2').click(function () {
	//現在の状況に合わせて開閉
    $('.open-2').slideToggle('slow');
    //現在の状況に合わせてクラスをつける
    $(this).toggleClass('active');
});


// Vue.js
function initial(){

	new Vue({
		el: '#msg',
		data: {
			flg:true,
	 		flg0:false,
		} ,
		// クリック時に各プロパティ名をtrue or falseへ変更
		methods: {
			change0: function(){
				this.flg1 = false;
				this.flg0 = true;
				this.flg = false;
			} ,
			change1: function(){
				this.flg0 = false;
				this.flg1 = true;
				this.flg = false;
			}
		}
	})
}


</script>